{
  "dataset_reader": {
    "type": "my_seq2seq",
    "source_token_indexers": {
      "source_tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "tokens"
      }
    },
    "target_tokenizer": {
      "type": "just_spaces"
    }
  },
  "train_data_path": "test/fixtures/train.txt",
  "validation_data_path": "test/fixtures/val.txt",
  "model": {
    "type": "seq2seq",
    "source_embedder": {
      "token_embedders": {
        "source_tokens": {
          "type": "embedding",
          "vocab_namespace": "source_tokens",
          "embedding_dim": 100,
          "trainable": true
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 200,
      "num_layers": 1,
      "bidirectional": true
    },
    "attention": {
      "type": "bilinear",
      "vector_dim": 400,
      "matrix_dim": 400
    },
    "target_embedding_dim": 100,
    "beam_size": 5,
    "max_decoding_steps": 100,
    "use_bleu": true
  },
  "data_loader": {
    "batch_sampler": {
      "type": "bucket",
      // Padding noise will break test. Relies on batches coming in deterministic order
      "padding_noise": 0.0,
      "batch_size": 32
    }
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    },
    "learning_rate_scheduler": {
      "type": "noam",
      "warmup_steps": 1000,
      "model_size": 200
    },
    "num_epochs": 15,
    "patience": 5,
    "validation_metric": "+seq_acc"
  }
}
